<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"  
	xmlns:p="http://www.springframework.org/schema/p"     
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    
 	xsi:schemaLocation="http://www.springframework.org/schema/beans      
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 

<!-- bean for the mapping entity or domain class-->
	<bean class="com.app.Student" name="stud">
	<!-- set the values to the entity by setter injection-->
		<property name="id" value="121"/>
		<property name="Name" value="ABCD"/>
		<property name="City" value="SEC"/>
	</bean>
</beans>
